void New_Game()
{
  HorizontalPotValue  = analogRead(HorizontalPotPin); 
  VerticalPotValue  = analogRead(VerticalPotPin);  
  HorizontalServoPosition  = map(HorizontalPotValue, 0, 1023, ServoH_Min , ServoH_Max); 
  VerticalServoPosition  = map(VerticalPotValue, 0, 1023, ServoH_Min , ServoH_Max);   
  
  LCD.setCursor(3, 0);
  LCD.print("BIENVENUE A");
  
  LCD.setCursor(1, 1);
  LCD.print("BORD DU JUGAKI");

  LCD.display();
  delay(1000);
  
  LCD.clear();
  delay(20);
  
  while (trigger_state == 1){
  	LCD.setCursor(0,0);
  	LCD.print("Pressez 1 bouton");
  	LCD.setCursor(0,1);
  	LCD.print("pour commencer.");
    trigger_state=digitalRead(13);
    
  	LCD.display();
  	delay(10);
  }
  
  LCD.clear();
  delay(20);
  
  LCD.setCursor(4, 0);
  LCD.print("VOUS AVEZ: ");
  
  LCD.setCursor(0, 1);
  LCD.print("3 vies / 10 tirs");
  
  delay(20);
  LCD.display();
  delay(1000);
  
  LCD.clear();
  delay(20);
  
  LCD.setCursor(0, 0);
  LCD.print("Rechargement: 5s ");
  
  LCD.setCursor(0, 1);
  LCD.print("Penalite: 3s");
  
  LCD.display();
  delay(1000);
  
  LCD.clear();
  delay(20);  
  LCD.setCursor(2, 0);
  LCD.print("BONNE CHANCE");
  
  LCD.setCursor(7, 1);
  LCD.print("^^");
  
  LCD.display();
  delay(1000);
  
  LCD.clear();
  delay(20);
  
  LCD.setCursor(7,0);
  LCD.print("3");
  
  LCD.display();
  delay(1000);
  
  LCD.clear();
  delay(20);
  
  LCD.setCursor(7,0);
  LCD.print("2");
  
  LCD.display();
  delay(1000);
  
  LCD.clear();
  delay(20);
  
  LCD.setCursor(7,0);
  LCD.print("1");
  
  LCD.display();
  delay(1000);
  
  LCD.clear();
  delay(20); 
}
